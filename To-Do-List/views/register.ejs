<html>

<head>
    <title>Register</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css">
    <link rel="stylesheet" type="text/css" href="/css/auth.css">
</head>

<nav class="navbar navbar-light bg-light">
    <a class="navbar-brand" href="/">
        <img src="images/logo.png" alt="Logo" width="145" height="42.5">
    </a>
</nav>

<body>
    <div class="container">
        <div id="wrapper">
            <% if (message !=undefined) { %>
                <div class="alert alert-primary text-center" role="alert">
                    <%= message %>
                </div>
                <% } %>
                    <div class="card text-center">
                        <h5 class="card-header">Register</h5>
                        <div class="card-body">
                            <img src="images/icon-1.png" height="134" width="134"><br><br>
                            <form action="/register" method="post">
                                <div class="input-group">
                                    <div class="input-group-prepend"><span class="input-group-text" id="basic-addon1"><i
                                                class="fas fa-user"></i></span></div>
                                    <input class="form-control" name="username" type="text" placeholder="Username"
                                        required maxlength="30">
                                </div><br>
                                <div class="input-group">
                                    <div class="input-group-prepend"><span class="input-group-text" id="basic-addon1"><i
                                                class="fas fa-envelope"></i></span></div>
                                    <input class="form-control" name="email" type="email" placeholder="Email" required>
                                </div><br>
                                <div class="input-group">
                                    <div class="input-group-prepend"><span class="input-group-text" id="basic-addon1"><i
                                                class="fas fa-lock"></i></span></div>
                                    <input class="form-control" name="password" type="password" placeholder="Password"
                                        required maxlength="30">
                                </div><br>
                                <button class="btn btn-primary" type="submit" style="width:100%;">Register</button>
                            </form>

                            <span class="txt1">
                                Do you have an account?
                            </span>
                            <a class="txt2" href="/login">
                                Login
                            </a>
                        </div><br>
                        <div id="footer">
                            <p>&copy; 2023 Todo. All rights reserved.</p></a>
                        </div>
                    </div>
        </div>
    </div>
</body>

</html>